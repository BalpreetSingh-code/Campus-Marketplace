@model Offer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Offer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Listing)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Listing!.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer!.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfferedPrice)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.OfferedPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
    {
        @if (Model.Status == "Pending")
        {
            <form asp-action="Accept" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">Accept</button>
            </form>
            <form asp-action="Reject" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Reject</button>
            </form>
        }
    }
    @if (User.IsInRole("Buyer") && Model.Status == "Accepted")
    {
        <form asp-controller="Orders" asp-action="CreateFromOffer" asp-route-offerId="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-primary">Create Order</button>
        </form>
    }
    @if (User.IsInRole("Buyer"))
    {
        <a asp-action="MyOffers" class="btn btn-secondary">Back to My Offers</a>
    }
    else if (User.IsInRole("Seller") && Model.Listing != null)
    {
        <a asp-action="ByListing" asp-route-listingId="@Model.Listing.Id" class="btn btn-secondary">Back to Listing Offers</a>
    }
    else if (User.IsInRole("Admin"))
    {
        <a asp-action="Index" class="btn btn-secondary">Back to All Offers</a>
    }
</div>

