@model Offer

@{
    ViewData["Title"] = "Create Offer";
    var listing = ViewData["Listing"] as Listing;
}

<h1>Create Offer</h1>

<h4>Offer for: @listing?.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Offers" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ListingId" value="@ViewData["ListingId"]" />
            <div class="form-group mb-3">
                <label class="control-label">Listing Price</label>
                <input type="text" class="form-control" value="$@listing?.Price" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="OfferedPrice" class="control-label"></label>
                <input asp-for="OfferedPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="OfferedPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Listings" asp-action="Index" class="btn btn-secondary">Back to Listings</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

