@{
    ViewData["Title"] = "Home";
    var recentListings = ViewData["RecentListings"] as IEnumerable<CampusMarketplace.Api.Models.Listing> ?? Enumerable.Empty<CampusMarketplace.Api.Models.Listing>();
}

<div class="jumbotron bg-primary text-white text-center py-5 mb-4 rounded">
    <h1 class="display-4">ðŸ“š Welcome to Campus Marketplace</h1>
    <p class="lead">Buy and sell textbooks, study materials, and more with fellow students!</p>
    <hr class="my-4" style="border-color: rgba(255,255,255,0.3);">
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <p class="lead">
            <a class="btn btn-light btn-lg me-2" asp-controller="Account" asp-action="Register" role="button">Get Started</a>
            <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Login" role="button">Login</a>
        </p>
    }
    else
    {
        <p class="lead">
            <a class="btn btn-light btn-lg me-2" asp-controller="Listings" asp-action="Index" role="button">Browse Listings</a>
            @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
            {
                <a class="btn btn-outline-light btn-lg" asp-controller="Listings" asp-action="Create" role="button">Create Listing</a>
            }
        </p>
    }
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Recent Listings</h2>
        @if (recentListings.Any())
        {
            <div class="row">
                @foreach (var listing in recentListings)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@listing.Title</h5>
                                <p class="card-text">
                                    <small class="text-muted">@listing.Category?.Name</small>
                                </p>
                                <p class="card-text">@(listing.Description.Length > 100 ? listing.Description.Substring(0, 100) + "..." : listing.Description)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="text-primary">$@listing.Price</strong>
                                        <small class="text-muted d-block">Condition: @listing.Condition</small>
                                    </div>
                                    <a asp-controller="Listings" asp-action="Details" asp-route-id="@listing.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Listings" asp-action="Index" class="btn btn-primary btn-lg">View All Listings</a>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p class="mb-0">No listings available yet. Be the first to create one!</p>
                @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                {
                    <a asp-controller="Listings" asp-action="Create" class="btn btn-primary mt-2">Create Listing</a>
                }
            </div>
        }
    </div>
</div>

